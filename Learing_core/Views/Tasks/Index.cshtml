@*@model IEnumerable<Models.Task>*@




<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <!-- Font Awesome CDN link -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap CSS link -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

</head>



<body>
    <section>


        <h5 class="mb-3"> To Do List</h5>

        <form class="mb-4" method="post" action="/Tasks">
            <div class="row">
                <div class="col">

                    <div class="form-outline">

                        <input type="text" name="TaskName" id="TaskName" class="form-control form-control-lg" placeholder="What do you need to do today?" />

                    </div>
                </div>
                <div class="col-auto">
                    <button type="submit" name="action" value="insert" class="btn btn-primary btn-lg">Add</button>
                </div>
            </div>
        </form>

        @foreach (var item in Model)
        {
            <table class="list-group mb-0">
                <tr class="list-group-item d-flex justify-content-between align-items-center border-0 rounded-0 mb-2">
                    <td >
                        <input class="form-check-input me-2" type="checkbox" @(item.isDone ? "checked" : "") />
                        @item.TaskName
    
                    </td>
                    <td>

                       
                        <i class="fas fa-times text-primary" value="@item.TaskId"></i>
                        
                       
                    </td>
                   
                </tr>

            </table>
        }

    </section>


    <!-- Bootstrap Bundle with Popper -->

</body>

